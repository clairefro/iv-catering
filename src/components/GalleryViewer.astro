---
import { getGalleryImages } from "../content/contentfulService.js";

const images = await getGalleryImages();
---

<section class="gallery-section">
  <div class="gallery-grid">
    {
      images.map((img: any, idx: any) => (
        <div class="gallery-card">
          <div class="gallery-img-wrapper" tabindex="0">
            <img
              src={img.image}
              alt={img.title || `Gallery image ${idx + 1}`}
              width={800}
              height={600}
              class="gallery-img"
            />
            <div class="gallery-img-fullsize" tabindex="-1" data-index={idx}>
              <button
                class="gallery-arrow gallery-arrow-left"
                aria-label="Previous image"
              >
                &#x2039;
              </button>
              <img
                src={img.image}
                alt={img.title || `Gallery image ${idx + 1}`}
                width={800}
                height={600}
                class="gallery-img-full"
              />
              <button
                class="gallery-arrow gallery-arrow-right"
                aria-label="Next image"
              >
                &#x203A;
              </button>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>

<style>
  .gallery-section {
    max-width: 72rem;
    margin-left: auto;
    margin-right: auto;
    padding-left: 1rem;
    padding-right: 1rem;
    padding-top: 3rem;
    padding-bottom: 3rem;
  }

  .gallery-desc {
    margin-top: 0.5rem;
    color: #4b5563;
  }
  .gallery-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.5rem;
  }
  @media (min-width: 640px) {
    .gallery-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (min-width: 1024px) {
    .gallery-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  .gallery-card {
    position: relative;
    overflow: hidden;
    background: #f3f4f6;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.08);
    transition: box-shadow 0.2s;
  }
  .gallery-card:hover {
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.16);
  }
  .gallery-img {
    height: 16rem;
    width: 100%;
    object-fit: cover;
    transition: transform 0.5s;
    display: block;
  }
  .gallery-card:hover .gallery-img {
    transform: scale(1.05);
    cursor: pointer;
  }
  .gallery-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: flex-end;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.6) 0%,
      transparent 100%
    );
    padding: 1rem;
    opacity: 0;
    transition: opacity 0.3s;
  }
  .gallery-card:hover .gallery-overlay {
    opacity: 1;
    cursor: pointer;
  }
  .gallery-overlay-title {
    color: #fff;
    font-weight: 500;
  }
  .gallery-img-fullsize {
    display: flex;
    opacity: 0;
    pointer-events: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.8);
    z-index: 2000;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .gallery-img-fullsize.active {
    opacity: 1;
    pointer-events: auto;
  }
  .gallery-img-full {
    width: auto;
    height: auto;
    max-width: 90vw;
    max-height: 90vh;
    aspect-ratio: 4/3;
    border-radius: 12px;
    box-shadow: 0 4px 32px rgba(0, 0, 0, 0.25);
    display: block;
    margin: auto;
    object-fit: contain;
    background: #222;
    transform: scale(0.95);
    opacity: 0.7;
    transition:
      transform 0.3s cubic-bezier(0.4, 0, 0.2, 1),
      opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .gallery-img-fullsize.active .gallery-img-full {
    transform: scale(1);
    opacity: 1;
  }

  .gallery-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.5);
    color: #fff;
    border: none;
    font-size: 2.5rem;
    width: 3.2rem;
    height: 3.2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    cursor: pointer;
    z-index: 2100;
    opacity: 0.85;
    transition:
      background 0.2s,
      opacity 0.2s;
    padding: 0;
  }
  .gallery-arrow:hover {
    background: rgba(0, 0, 0, 0.8);
    opacity: 1;
  }
  .gallery-arrow-left {
    left: 2vw;
    right: auto;
  }
  .gallery-arrow-right {
    right: 2vw;
    left: auto;
  }
</style>

<script is:inline>
  // Use event delegation for robust handling after hot reloads and dynamic content
  document.addEventListener("click", (e) => {
    // Open fullsize on thumbnail click
    const thumb = e.target.closest(".gallery-img");
    if (thumb) {
      const wrapper = thumb.closest(".gallery-img-wrapper");
      const overlay = wrapper && wrapper.querySelector(".gallery-img-fullsize");
      if (overlay) {
        overlay.classList.add("active");
        e.preventDefault();
        return;
      }
    }
    // Close fullsize on overlay click (but not when clicking arrows or image)
    const overlay = e.target.closest(".gallery-img-fullsize.active");
    if (
      overlay &&
      !e.target.classList.contains("gallery-arrow") &&
      !e.target.classList.contains("gallery-img-full")
    ) {
      overlay.classList.remove("active");
      e.preventDefault();
      return;
    }
    // Navigation arrows
    if (e.target.classList.contains("gallery-arrow")) {
      const isLeft = e.target.classList.contains("gallery-arrow-left");
      const isRight = e.target.classList.contains("gallery-arrow-right");
      const overlay = e.target.closest(".gallery-img-fullsize");
      if (!overlay) return;
      const allOverlays = Array.from(
        document.querySelectorAll(".gallery-img-fullsize"),
      );
      const currentIdx = Number(overlay.getAttribute("data-index"));
      let nextIdx = currentIdx;
      if (isLeft)
        nextIdx = (currentIdx - 1 + allOverlays.length) % allOverlays.length;
      if (isRight) nextIdx = (currentIdx + 1) % allOverlays.length;
      overlay.classList.remove("active");
      const nextOverlay = allOverlays[nextIdx];
      if (nextOverlay) nextOverlay.classList.add("active");
      e.preventDefault();
      return;
    }
  });
</script>
