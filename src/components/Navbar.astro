---
const { pathname } = Astro.url;

const links = [
  { path: "/", text: "Home" },
  { path: "/about", text: "About" },
  { path: "/menu", text: "Menu" },
  { path: "/gallery", text: "Gallery" },
  { path: "/contact", text: "Contact" },
];
---

<nav>
  <ul>
    {
      links.map((link) => (
        <li>
          <a href={link.path} class={pathname === link.path ? "active" : ""}>
            {link.text}
          </a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  nav {
    background: var(--card-bg);
    padding: 1rem 2rem 1rem 2rem;
    border-radius: 10px;
    box-shadow: var(--shadow);
    font-family: "Georgia", "Times New Roman", Times, serif;
    margin-bottom: 2rem;
  }
  nav ul {
    display: flex;
    gap: 1.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
    align-items: center;
  }

  nav li {
    margin-bottom: 0;
  }
  nav a {
    text-decoration: none;
    color: var(--link);
    font-family: inherit;
    padding: 0.25em 1em;
    transition: color 0.2s;
  }
  nav a:hover {
    color: var(--link-hover);
  }
  nav a.active {
    text-decoration: underline;
    color: var(--link-hover);
  }
</style>
