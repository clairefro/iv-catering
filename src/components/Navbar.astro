---
const { pathname } = Astro.url;
---

<nav>
  <ul>
    <li><a href="/" class={pathname === "/" ? "active" : ""}>Home</a></li>
    <li>
      <a href="/about" class={pathname === "/about" ? "active" : ""}>About</a>
    </li>
    <li>
      <a href="/menu" class={pathname === "/menu" ? "active" : ""}>Menu</a>
      <li>
        <a href="/contact" class={pathname === "/contact" ? "active" : ""}
          >Contact</a
        >
      </li>
    </li>
  </ul>
</nav>

<style>
  nav {
    background: #f8f8f8;
    padding: 1rem;
  }
  nav ul {
    display: flex;
    gap: 1rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  nav a {
    text-decoration: none;
    color: #333;
    font-weight: bold;
    padding: 0.25em 0.75em;
  }
  nav a:hover {
    color: #0077cc;
  }
  nav a.active {
    color: #fff;
    background: #0077cc;
    border-radius: 4px;
    /* padding: 0.25em 0.75em; */
  }
</style>
