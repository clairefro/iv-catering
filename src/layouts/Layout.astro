---
import "../assets/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>
      Iovino's Catering | Authentic Italian Catering in Corvallis, Oregon
    </title>
    <meta
      name="description"
      content="Authentic Italian catering in Corvallis, Oregon. Weddings, events, parties, and more."
    />
    <meta
      name="keywords"
      content="Corvallis catering, Italian catering Corvallis, event catering Corvallis, wedding catering Corvallis, party catering Corvallis, corporate catering Corvallis, best catering Corvallis, Italian food catering Corvallis, local catering services Corvallis, Corvallis Oregon catering company, full-service catering Corvallis, affordable catering Corvallis, catering for weddings and events Corvallis, authentic Italian catering Corvallis"
    />
    <link rel="canonical" href="https://iovinos-catering.com" />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "CateringBusiness",
        "name": "Iovino's Catering",
        "description": "Authentic Italian catering in Corvallis, Oregon. Weddings, events, parties, and more.",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Corvallis",
          "addressRegion": "OR",
          "addressCountry": "US"
        },
        "telephone": "+1-541-908-9544",
        "url": "https://iovinos-catering.com",
        "servesCuisine": "Italian",
        "areaServed": {
          "@type": "City",
          "name": "Corvallis",
          "containedInPlace": {
            "@type": "State",
            "name": "Oregon"
          }
        },
        "priceRange": "$$",
        "sameAs": []
      }
    </script>
    {/* OpenGraph Facebook */}
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Iovino's Catering | Authentic Italian Catering in Corvallis, Oregon"
    />
    <meta
      property="og:description"
      content="Authentic Italian catering in Corvallis, Oregon. Weddings, events, parties, and more. Contact Iovino's Catering for delicious, memorable food and service."
    />
    <meta property="og:url" content="https://iovinos-catering.com/" />
    <meta property="og:image" content="/assets/iovinos-og.png" />
    {/* OpenGraph: Twitter */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Iovino's Catering | Authentic Italian Catering in Corvallis, Oregon"
    />
    <meta
      name="twitter:description"
      content="Authentic Italian catering in Corvallis, Oregon. Weddings, events, parties, and more. Contact Iovino's Catering for delicious, memorable food and service."
    />
    <meta name="twitter:image" content="/assets/iovinos-og.png" />
    <ClientRouter />
    <slot name="head" />
  </head>

  <body>
    <Navbar />
    <main class="main-content" astro-view-transition>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  .main-content {
    min-height: 80vh;
    padding-bottom: 4rem;
    opacity: 0;
    animation: fadeInMain 0.5s ease 0.1s forwards;
    /* Prevent flicker on fast transitions */
    will-change: opacity;
  }

  @keyframes fadeInMain {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
