---
import "../assets/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    {/* TODO: Remove at launch - prevents search engine indexing for now */}
    <meta name="robots" content="noindex, nofollow" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Iovino's Catering | Authentic Catering in Corvallis, Oregon</title>
    <ClientRouter />
  </head>
  <body>
    <Navbar />
    <main class="main-content" astro-view-transition>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  .main-content {
    min-height: 80vh;
    padding-bottom: 4rem;
    opacity: 0;
    animation: fadeInMain 0.5s ease 0.1s forwards;
    /* Prevent flicker on fast transitions */
    will-change: opacity;
  }

  @keyframes fadeInMain {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
