---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
---

<Layout>
  <Fragment slot="head">
    <meta name="robots" content="noindex, nofollow" />
  </Fragment>
  <Container>
    <a href="/" class="back-link">‚Üê Back to Home</a>
    <div style="text-align:center">
      <h2>
        4
        <span class="admin-secret-zero" style="cursor:pointer" tabindex="0"
          >0</span
        >
        4
      </h2>
      <p>Page not found</p>
    </div>
  </Container>
  <script is:inline>
    document.addEventListener("DOMContentLoaded", function () {
      const secretZero = document.querySelector(".admin-secret-zero");
      const secretUrl =
        "https://app.contentful.com/spaces/dzohsh5fpsgf/views/entries";
      if (secretZero) {
        secretZero.addEventListener("click", function (e) {
          window.open(secretUrl, "_blank", "noopener,noreferrer");
        });
        secretZero.addEventListener("keydown", function (e) {
          if (e.key === "Enter" || e.key === " ") {
            window.open(secretUrl, "_blank", "noopener,noreferrer");
          }
        });
      }
    });
  </script>
  <style>
    .back-link {
      display: inline-block;
      margin: 1.2rem 0 0.5rem 0;
      font-size: 1.08rem;
      color: var(--accent, #eab308);
      text-decoration: underline;
      font-family: var(--header-font, serif);
      transition: color 0.2s;
    }
    .back-link:hover {
      color: #b97a1a;
      text-decoration: underline;
    }
  </style>
</Layout>
