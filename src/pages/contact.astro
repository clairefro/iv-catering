---
import Container from "../components/Container.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="hero-img-container">
    <img
      src="/assets/veggie-header.webp"
      class="fade hero-img"
      alt="Italian catering hero"
      onload="this.style.opacity=1"
    />
  </div>
  <Container>
    <a href="/" class="back-link">‚Üê Back to Home</a>
    <h1 style="margin-top: 1.5rem;">Contact</h1>
    <p>Get in touch with me for catering quotes, bookings, or questions!</p>
    <ul>
      <li>Email: regina@iovinos-catering.com</li>
      <li>Phone: (541) 908-9544</li>
    </ul>
    <div class="menu-cta-wrapper">
      <a href="/menu" class="cta-btn menu-cta">View Menu</a>
    </div>

    <h2 style="text-align:center;">For questions and quotes</h2>
    <form id="contactForm">
      <label>
        Full Name*
        <input type="text" name="name" required />
      </label>
      <label>
        Email*
        <input type="email" name="email" required />
      </label>
      <label>
        Phone Number
        <input type="tel" name="phone" placeholder="(555) 555-5555" />
      </label>
      <label>
        Message*
        <textarea name="message" required rows="6"></textarea>
      </label>
      <label class="checkbox-label">
        <input type="checkbox" id="notRobot" required />
        I'm a human
      </label>
      <button type="submit" id="contactSubmitBtn">Send</button>
    </form>
    <div id="formStatus"></div>
  </Container>
</Layout>

<script>
  // TODO: Update with prod google sheet
  document.addEventListener("astro:page-load", () => {
    document
      .getElementById("contactForm")
      ?.addEventListener("submit", async function (e) {
        e.preventDefault();
        const form = e.target as HTMLFormElement;
        const submitBtn = document.getElementById(
          "contactSubmitBtn",
        ) as HTMLButtonElement;
        const status = document.getElementById("formStatus");
        const notRobot = document.getElementById(
          "notRobot",
        ) as HTMLInputElement;
        if (!status || !submitBtn || !form) return;
        if (!notRobot?.checked) {
          status.textContent = "Please confirm you're not a robot.";
          status.scrollIntoView({ behavior: "smooth", block: "center" });
          return;
        }
        const originalText = submitBtn.textContent;
        submitBtn.disabled = true;
        submitBtn.textContent = "Submitting...";
        submitBtn.style.cursor = "not-allowed";
        try {
          const formData = new FormData(form);
          const response = await fetch(
            "https://script.google.com/macros/s/AKfycbxHDow-_PFJr-tddhNGUzxeFVxqx1VF1FrZpuE8L60QL7j3C5nkH6_y3nnIB2HItb7FJQ/exec",
            {
              method: "POST",
              body: formData,
              // No headers!
            },
          );
          if (response.ok) {
            status.textContent = "Thank you! Your message was sent.";
            form.reset();
            status.scrollIntoView({ behavior: "smooth", block: "center" });
          } else {
            status.textContent = "Error sending message. Please try again.";
            status.scrollIntoView({ behavior: "smooth", block: "center" });
          }
        } catch (err) {
          status.textContent = "Error sending message. Please try again.";
          status.scrollIntoView({ behavior: "smooth", block: "center" });
        } finally {
          submitBtn.disabled = false;
          submitBtn.textContent = originalText;
          submitBtn.style.cursor = "pointer";
        }
      });
  }); // astro:page-load
</script>

<style>
  .hero-img-container {
    position: relative;
    width: 100vw;
    height: 200px;
    max-width: 100vw;
    margin-left: 50%;
    transform: translateX(-50%);
    overflow: hidden;
    box-shadow: 0 2px 16px rgba(0, 0, 0, 0.08);
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--accent);
    top: -36px;
  }

  .hero-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100%;
    object-fit: cover;
    z-index: 1;
    display: block;
    pointer-events: none;
  }

  #contactForm {
    background: #fff;
    padding: 2rem;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
    max-width: 100%;
    margin: 2rem 1rem;
  }
  #contactForm label {
    display: flex;
    flex-direction: column;
    font-weight: 500;
    color: #222;
    gap: 0.4rem;
  }
  #contactForm input,
  #contactForm textarea {
    padding: 0.7em 1em;
    border: 1px solid #ddd;
    font-size: 1rem;
    font-family: inherit;
    background: #fafafa;
    color: #222;
    resize: vertical;
  }
  #contactForm .checkbox-label {
    flex-direction: row;
    align-items: center;
    gap: 0.6rem;
    font-weight: 400;
    cursor: pointer;
  }
  #contactForm .checkbox-label input[type="checkbox"] {
    width: 1.1rem;
    height: 1.1rem;
    padding: 0;
    cursor: pointer;
  }
  #contactForm button {
    background: var(--accent, #eab308);
    color: #fff;
    border: none;
    padding: 0.8em 1.5em;
    font-size: 1.1rem;
    font-family: var(--header-font);
    cursor: pointer;
    margin-top: 0.5rem;
    transition: background 0.2s;
  }
  #contactForm button:hover {
    background: #b97a1a;
  }
  #formStatus {
    margin-top: 1rem;
    font-size: 1.08rem;
    color: #222;
    text-align: center;
  }
  @media (max-width: 600px) {
    #contactForm {
      padding: 1rem 0.5rem;
      max-width: 98vw;
      margin: 1.2rem auto;
    }

    .hero-img-container {
      height: 160px;
    }
    .hero-img-container .hero-img {
      height: 300px;
      width: 600px;
      transform: scale(2) translateY(-40px);
    }
    .hero-img-container img {
      max-width: 100%;
      height: auto;
      display: block;
      margin: 0 auto;
    }
  }
  .menu-cta-wrapper {
    display: flex;
    justify-content: center;
    margin-bottom: 2rem;
  }
  .menu-cta {
    background: var(--accent, #eab308);
    color: #fff !important;
    font-family: var(--header-font);
    text-decoration: none !important;
    font-size: 1.15rem;
    padding: 0.9em 2em;
    margin-top: 0.5rem;
    border: none;
    /* border-radius: 4px; */
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    transition: background 0.2s;
    display: inline-block;
    cursor: pointer;
  }
  .menu-cta:hover {
    background: #b97a1a;
  }
  .back-link {
    display: inline-block;
    margin: 1.2rem 0 0.5rem 0;
    font-size: 1.08rem;
    color: var(--accent, #eab308);
    text-decoration: underline;
    font-family: var(--header-font, serif);
    transition: color 0.2s;
  }
  .back-link:hover {
    color: #b97a1a;
    text-decoration: underline;
  }
</style>
