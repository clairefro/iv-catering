---
import Container from "../components/Container.astro";
import Layout from "../layouts/Layout.astro";

import GalleryViewer from "../components/GalleryViewer.astro";
---

<Layout>
  <Container>
    <div style="text-align: center;">
      <h1>Gallery</h1>
      <p>See some of my past spreads to inspire your next event</p>
    </div>
    <GalleryViewer />
  </Container>
</Layout>

<style>
  .gallery {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 1rem;
  }
  .gallery img {
    width: 200px;
    height: 140px;
    object-fit: cover;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }
</style>
