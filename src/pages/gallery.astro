---
import Container from "../components/Container.astro";
import Layout from "../layouts/Layout.astro";
import mushroom from "../assets/imgs/mushroom.jpeg";
import platters from "../assets/imgs/platters.png";
import shrimp from "../assets/imgs/shrimp.jpeg";
import vegetables from "../assets/imgs/vegetables.jpeg";
import { Image } from "astro:assets";
import GalleryViewer from "../components/GalleryViewer.astro";
---

<Layout>
  <Container>
    <h1>Gallery</h1>
    <p>Take a look at some of our recent events and delicious dishes!</p>
    <GalleryViewer />
  </Container>
</Layout>

<style>
  .gallery {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 1rem;
  }
  .gallery img {
    width: 200px;
    height: 140px;
    object-fit: cover;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }
</style>
