---
import Container from "../components/Container.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="home-hero-img">
    <img src="/assets/veggie-header.png" alt="Italian catering hero" />
  </div>

  <Container>
    <section class="home-hero">
      <h1>Iovino's Catering</h1>
      <p class="home-tagline">You make the call... we do it all!</p>
      <img
        src="/assets/regina.jpg"
        alt="Regina Iovino"
        class="home-regina-img"
      />
      <p class="home-intro">
        I'm Regina Iovino, an Italian chef at heart, inspired by the rich
        traditions, flavors, and spirit of Italy. For me, catering is about more
        than foodâ€”it's about creating moments, laughter, and memories that
        linger long after the last bite. Whether it's an intimate dinner, a
        family celebration, or a grand gathering, I pour authenticity,
        generosity, and vibrant Italian flavor into everything I create.
      </p>
      <div class="home-links">
        <a href="/menu">View Menu</a>
        <a href="/gallery">See Our Gallery</a>
        <a href="/contact">Contact Us</a>
      </div>
      <div class="home-highlight">
        <h2>What We Offer</h2>
        <ul>
          <li>Authentic Italian catering for any occasion</li>
          <li>Personalized menus and warm hospitality</li>
          <li>Beautiful presentations and memorable experiences</li>
        </ul>
      </div>
      <div class="home-cta">
        <p>
          Ready to make your next event unforgettable? <a href="/contact"
            >Get in touch!</a
          >
        </p>
      </div>
    </section>
  </Container>

  <style>
    .home-hero {
      text-align: center;
      margin-top: 2.5rem;
      margin-bottom: 2.5rem;
    }
    .home-tagline {
      font-size: 1.3rem;
      color: var(--accent, #eab308);
      margin-bottom: 1.5rem;
      font-family: var(--header-font);
    }
    .home-regina-img {
      display: block;
      margin: 0 auto 2rem auto;
      width: 180px;
      object-fit: cover;
      border-radius: 50%;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
    }
    .home-intro {
      font-size: 1.13rem;
      max-width: 600px;
      margin: 0 auto 2rem auto;
      color: #333;
    }
    .home-links {
      display: flex;
      justify-content: center;
      gap: 2rem;
      margin-bottom: 2.5rem;
      flex-wrap: wrap;
      font-family: var(--header-font);
    }
    .home-links a {
      background: var(--accent, #eab308);
      color: #fff;
      padding: 0.7em 1.5em;
      text-decoration: none;
      font-size: 1.08rem;
      transition: background 0.2s;
    }
    .home-links a:hover {
      background: #b97a1a;
      font-family: var(--header-font);
    }
    .home-highlight {
      margin: 2.5rem auto 2rem auto;
      max-width: 500px;
      background: #faf7f2;
      border-radius: 1.2em;
      padding: 1.5rem 1.2rem;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    }
    .home-highlight h2 {
      margin-top: 0;
      color: var(--accent, #eab308);
      font-size: 1.25rem;
      font-family: var(--header-font);
    }
    .home-highlight ul {
      list-style: disc inside;
      margin: 1rem 0 0 0;
      padding: 0;
      color: #444;
      font-size: 1.08rem;
      text-align: left;
    }
    .home-cta {
      margin-top: 2.5rem;
      font-size: 1.15rem;
      color: #222;
    }
    .home-cta a {
      color: var(--accent, #eab308);
      text-decoration: underline;
      font-weight: 600;
    }

    .home-hero-img {
      padding: 0 !important;
      width: 100vw;
      position: relative;
      left: 50%;
      right: 50%;
      margin-left: -50vw;
      margin-right: -50vw;
      max-width: 100vw;
      overflow: hidden;
      height: 320px;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 2px 16px rgba(0, 0, 0, 0.08);
    }
    .home-hero-img img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      /* object-position: center 30%; */
      display: block;
    }

    @media (max-width: 600px) {
      .home-links {
        flex-direction: column;
        gap: 1.2rem;
      }
      .home-highlight {
        padding: 1.1rem 0.5rem;
      }
      .home-regina-img {
        width: 140px;
      }
      .home-hero-img {
        height: 160px;
      }
    }
  </style>
</Layout>
