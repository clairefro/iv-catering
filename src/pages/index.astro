---
import Container from "../components/Container.astro";
import Layout from "../layouts/Layout.astro";
---

<Fragment slot="head">
  <link rel="preload" as="image" href="/assets/veggie-header.webp" />
</Fragment>

<Layout>
  <div class="home-hero-img hero-with-logo">
    <img
      src="/assets/veggie-header.webp"
      class="fade hero-bg-img"
      alt="Italian catering hero"
      onload="this.style.opacity=1"
    />
    <img
      src="/assets/iovinos-logo.png"
      alt="Iovino's Catering"
      class="logo-banner hero-logo-centered"
    />
  </div>

  <section class="home-hero">
    <Container>
      <div class="home-tagline-secondary">Authentic Italian Catering</div>
      <div class="home-tagline-secondary">
        Serving Corvallis, OR and surrounding areas
      </div>

      <h1 style="display:none;">Iovino's Catering</h1>
      <p class="home-tagline">You make the call... we do it all!</p>
      <img
        src="/assets/regina.jpg"
        alt="Regina Iovino"
        class="home-regina-img"
      />
      <p class="home-intro">
        I'm <a href="/about"><strong>Regina Iovino</strong></a>, former owner
        and chef of Iovino's Restaurant in Corvallis. An Italian chef at heart,
        I'm inspired by the rich traditions, flavors, and spirit of Italy. For
        me, catering is about more than food â€” it's about creating moments,
        laughter, and memories that linger long after the last bite. Whether
        it's an intimate dinner, a family celebration, or a grand gathering, I
        pour authenticity, generosity, and vibrant Italian flavor into
        everything I create.
      </p>
      <div class="home-links">
        <a href="/menu">View Menu</a>
        <a href="/gallery">See Gallery</a>
        <a href="/contact">Contact</a>
      </div>
    </Container>
  </section>

  <section class="highlighted">
    <Container>
      <div>
        <h2>What We Offer</h2>
        <p>Authentic Italian catering for any occasion</p>
        <p>Personalized menus and warm hospitality</p>
        <p>Beautiful presentations and memorable experiences</p>
      </div>
    </Container>
  </section>
  <div class="platter-banner">
    <img
      src="/assets/platter_banner_up.webp"
      alt="Iovino's Catering platter"
      class="fade"
      loading="lazy"
      onload="this.style.opacity=1"
    />
  </div>
  <section class="services-section">
    <div class="services-split">
      <div class="service-card">
        <h2>Delivery Platters</h2>
        <p>Italian dishes delivered, ready to serve</p>
      </div>
      <div class="service-card">
        <h2>On-site Chef</h2>
        <p>Regina cooks and serves at your event</p>
      </div>
    </div>
  </section>

  <section class="great-for-section highlighted">
    <Container>
      <div class="great-for-overlay">
        <h2>Great For</h2>
        <ul class="great-for-list no-style">
          <li>Weddings & rehearsal dinners</li>
          <li>Birthday parties & anniversaries</li>
          <li>Family reunions & holiday gatherings</li>
          <li>Corporate events & business luncheons</li>
          <li>Graduations & milestone celebrations</li>
          <li>Casual get-togethers with friends</li>
        </ul>
      </div>
    </Container>
  </section>
  <section>
    <Container>
      <div class="home-cta">
        <p>Ready to make your next event unforgettable?</p>
        <a href="/contact" class="cta-btn">Get in Touch</a>
      </div>
    </Container>
  </section>
</Layout>
<style>
  .hero-with-logo {
    position: relative;
  }
  .hero-logo-centered {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    max-width: 400px;
    width: 60vw;
    z-index: 2;
    pointer-events: none;
  }
  .cta-btn {
    display: inline-block;
    background: var(--accent, #eab308);
    color: #fff !important;
    font-family: var(--header-font);
    text-decoration: none !important;
    font-size: 1.15rem;
    padding: 0.9em 2em;
    margin-top: 1.2rem;
    transition: background 0.2s;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
  }
  .cta-btn:hover {
    background: #b97a1a;
  }
  .great-for-section {
    background: url("/assets/mushroom.webp") center/cover no-repeat;
    position: relative;
    min-height: 340px;
  }
  .great-for-section::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(32, 32, 32, 0.6); /* adjust opacity as needed */
    z-index: 0;
  }
  .great-for-overlay {
    /* background: rgba(32, 32, 32, 0.7); */
    padding: 2.5rem 1.5rem;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    max-width: 600px;
    margin: 2rem auto;
    color: #fff;
    position: relative;
    z-index: 1;
  }
  .great-for-overlay h2,
  .great-for-overlay ul,
  .great-for-overlay li {
    color: #fff;
  }
  h2 {
    color: var(--accent);
  }

  section {
    margin: 1rem 0;
    padding: 2rem 0;
    text-align: center;
  }
  section.highlighted {
    background-color: var(--bg-highlight);
  }

  .home-tagline {
    font-size: 1.3rem;
    color: var(--accent, #eab308);
    margin-bottom: 1.5rem;
    font-family: var(--header-font);
  }
  .home-regina-img {
    display: block;
    margin: 0 auto 2rem auto;
    width: 180px;
    object-fit: cover;
    border-radius: 50%;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
  }
  .home-intro {
    font-size: 1.13rem;
    max-width: 600px;
    margin: 0 auto 2rem auto;
    color: #333;
  }
  .home-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 2.5rem;
    flex-wrap: wrap;
    font-family: var(--header-font);
  }
  .home-links a {
    background-color: var(--text);
    color: #fff;
    padding: 0.7em 1.5em;
    text-decoration: none;
    font-size: 1.08rem;
    transition: background 0.2s;
  }
  .home-links a:hover {
    background: #b97a1a;
    font-family: var(--header-font);
  }

  .home-cta {
    margin-top: 2.5rem;
    font-size: 1.15rem;
    color: #222;
  }
  .home-cta a {
    color: var(--accent, #eab308);
    text-decoration: underline;
    font-family: var(--header-font);
  }

  .home-hero-img {
    position: relative;
    width: 100vw;
    height: 340px;
    max-width: 100vw;
    margin-left: 50%;
    transform: translateX(-50%);
    overflow: hidden;
    box-shadow: 0 2px 16px rgba(0, 0, 0, 0.08);
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--accent);
    top: -20px;
  }
  .hero-bg-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100%;
    object-fit: cover;
    z-index: 1;
    display: block;
    pointer-events: none;
  }
  section.home-hero {
    padding-top: 0rem !important;
  }
  .platter-banner {
    width: 100%;
  }
  .platter-banner img {
    width: 100vw;
    height: 300px;
    display: block;
    object-fit: cover;
  }

  .great-for-list {
    list-style-type: none;
    text-align: center; /* centers the text */
    margin: 0 auto;
    max-width: 600px; /* optional: for a nice width */
    padding: 0;
  }
  .great-for-list li {
    margin-bottom: 0.8em;
  }

  .home-tagline-secondary {
    text-align: center;
    font-size: 1.13rem;
    color: #b97a1a;
    margin: 1.2rem 0 0.5rem 0;
    font-family: var(--header-font, serif);
    letter-spacing: 0.01em;
  }

  .services-split {
    display: flex;
    gap: 2rem;
    justify-content: center;
    align-items: stretch;
    margin: 2rem 0;
    flex-wrap: wrap;
  }
  .service-card {
    flex: 1 1 260px;
    background: var(--bg-highlight, #f8f8f8);
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    padding: 2rem 1.5rem;
    margin: 0 0.5rem;
    min-width: 220px;
    max-width: 400px;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .service-card h2 {
    color: var(--accent);
    margin-bottom: 0.7rem;
  }

  .fade {
    opacity: 0;
    transition: opacity 0.3s;
  }

  @media (max-width: 800px) {
    .services-split {
      flex-direction: column;
      gap: 1.5rem;
    }
    .service-card {
      max-width: 100%;
      margin: 0 auto;
    }
  }

  @media (max-width: 600px) {
    .home-links {
      flex-direction: column;
      gap: 1.2rem;
    }
    .home-highlight {
      padding: 1.1rem 0.5rem;
    }
    .home-regina-img {
      width: 140px;
    }
    .home-hero-img {
      height: 260px;
    }
    .home-hero-img .hero-bg-img {
      height: 300px;
      width: 600px;
      transform: scale(2) translateY(-40px);
    }
    .home-hero-img img {
      max-width: 100%;
      height: auto;
      display: block;
      margin: 0 auto;
    }

    section {
      margin-top: 0;
    }
  }
</style>
