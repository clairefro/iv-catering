---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";

import { getMenuRichText } from "../content/contentfulService.js";
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";

const menuRichText: any = await getMenuRichText();
const html = documentToHtmlString(menuRichText);
---

<Layout>
  <Container>
    <a href="/" class="back-link">‚Üê Back to Home</a>
    <section>
      <h1>Menu</h1>
      {menuRichText ? <div set:html={html} /> : <p>Coming soon...</p>}
      <div class="menu-cta-wrapper">
        <a href="/contact" class="cta-btn menu-cta">Get a Quote</a>
      </div>
    </section>
  </Container>
  <style>
    .back-link {
      display: inline-block;
      margin: 1.2rem 0 0.5rem 0;
      font-size: 1.08rem;
      color: var(--accent, #eab308);
      text-decoration: underline;
      font-family: var(--header-font, serif);
      transition: color 0.2s;
    }
    .back-link:hover {
      color: #b97a1a;
      text-decoration: underline;
    }
    .menu-cta-wrapper {
      display: flex;
      justify-content: center;
      margin: 2.5rem 0 1.5rem 0;
    }
    .menu-cta {
      background: var(--accent, #eab308);
      color: #fff !important;
      font-family: var(--header-font);
      text-decoration: none !important;
      font-size: 1.15rem;
      padding: 0.9em 2em;
      border: none;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
      transition: background 0.2s;
      display: inline-block;
      cursor: pointer;
    }
    .menu-cta:hover {
      background: #b97a1a;
    }
  </style>
</Layout>
