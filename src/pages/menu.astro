---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";

import { getMenuRichText } from "../content/contentfulService.js";
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";

const menuRichText: any = await getMenuRichText();
const html = documentToHtmlString(menuRichText);
---

<Layout>
  <Container>
    <a href="/" class="back-link">‚Üê Back to Home</a>
    <section>
      <h1>Menu</h1>
      {menuRichText ? <div set:html={html} /> : <p>Coming soon...</p>}
    </section>
  </Container>
  <style>
    .back-link {
      display: inline-block;
      margin: 1.2rem 0 0.5rem 0;
      font-size: 1.08rem;
      color: var(--accent, #eab308);
      text-decoration: underline;
      font-family: var(--header-font, serif);
      transition: color 0.2s;
    }
    .back-link:hover {
      color: #b97a1a;
      text-decoration: underline;
    }
  </style>
</Layout>
